<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="Examples"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  WidthSpecification="-1"
  HeightSpecification="-1"
  BackgroundColor="White">

    <ContentPage.Content>

        <View
			WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
			HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
			Padding="40,40,40,40"
			BackgroundColor="#d7d6f5">

            <View.Layout>
                <GridLayout Columns="2" Rows="3"/>
            </View.Layout>

            <View
				BackgroundColor="#2b7baaff"
				GridLayout.HorizontalStretch="ExpandAndFill"
				GridLayout.VerticalStretch="ExpandAndFill"/>

            <View
				BackgroundColor="#6b7baaff"
				GridLayout.HorizontalStretch="ExpandAndFill"
				GridLayout.VerticalStretch="ExpandAndFill"/>

            <View
				BackgroundColor="#ab7baaff"
				GridLayout.HorizontalStretch="ExpandAndFill"
				GridLayout.VerticalStretch="ExpandAndFill"/>

            <View
				BackgroundColor="#eb7baaff"
				GridLayout.HorizontalStretch="ExpandAndFill"
				GridLayout.VerticalStretch="ExpandAndFill"/>

            <View
				BackgroundColor="#FFFFD4FF"
				GridLayout.HorizontalStretch="ExpandAndFill"
				GridLayout.VerticalStretch="ExpandAndFill"/>

        </View>

    </ContentPage.Content>

</ContentPage>
