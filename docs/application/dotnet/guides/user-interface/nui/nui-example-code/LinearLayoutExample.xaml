<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="Examples"
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  WidthSpecification="-1"
  HeightSpecification="-1"
  BackgroundColor="White">

    <ContentPage.Content>

        <View
			WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
			HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
			Padding="40,40,40,40"
			BackgroundColor="#d7d6f5">

            <View.Layout>
                <LinearLayout LinearOrientation="Horizontal" CellPadding="20,0"/>
            </View.Layout>

            <View
				WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
				HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
				Weight="0.1"
				BackgroundColor="#2b7baa"/>

            <View
				WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
				HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
				Weight="0.25"
				BackgroundColor="#6b7baa"/>

            <View
				WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
				HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
				Weight="0.25"
				BackgroundColor="#ab7baa"/>

            <View
	    		WidthSpecification="{Static LayoutParamPolicies.MatchParent}"
				HeightSpecification="{Static LayoutParamPolicies.MatchParent}"
				Weight="0.1"
				BackgroundColor="#eb7baa"/>

        </View>

    </ContentPage.Content>


</ContentPage>
